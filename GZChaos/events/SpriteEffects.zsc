Class GZC_SuperNintendoDoom : GZC_Event
{
	override void eventFunc()
	{
		ThinkerIterator it = ThinkerIterator.Create("Actor");
		Actor mo;
		
		while ((mo = Actor(it.Next ())))
		{
			if (mo.bIsMonster)
			{
				mo.bSpriteAngle = true;
				mo.spriteAngle = 180;
			}	
		}
	}
	
	override void closeFunc()
	{
		ThinkerIterator it = ThinkerIterator.Create("Actor");
		Actor mo;
		
		while ((mo = Actor(it.Next ())))
		{
			if (mo.bIsMonster)
			{
				mo.bSpriteAngle = false;
			}	
		}
	}
	
	static GZC_Event create()
	{
		GZC_Event event = new('GZC_SuperNintendoDoom');
		event.eventname = "Doom for the SNES";
		event.duration = 35 * 60 * 2;
		event.type = E_Timed;
		return event;
	}
}

Class GZC_SpinningMonsters : GZC_Event
{
	int factor;

	override void eventFunc()
	{
		ThinkerIterator it = ThinkerIterator.Create("Actor");
		Actor mo;
		
		while (!factor) 
		{
			factor = random(-15, 15);
		}
		
		while ((mo = Actor(it.Next ())))
		{
			if (mo.bIsMonster)
			{
				mo.bRollSprite = true;
				mo.bRollCenter = true;
				mo.roll += factor;
			}
		}
	}
	
	override void closeFunc() 
	{
		ThinkerIterator it = ThinkerIterator.Create("Actor");
		Actor mo;
	
		while ((mo = Actor(it.Next ())))
		{
			if (mo.bIsMonster)
			{
				let def = getDefaultByType(mo.getClass());
				
				mo.bRollSprite = def.bRollSprite;
				mo.bRollCenter = def.bRollCenter;
				mo.roll = def.roll;
			}
		}
	}
	
	static GZC_Event create()
	{
		GZC_Event event = new('GZC_SpinningMonsters');
		event.eventname = "On a roll";
		event.duration = 35 * 60 * 2;
		event.type = E_Timed;
		return event;
	}
}

