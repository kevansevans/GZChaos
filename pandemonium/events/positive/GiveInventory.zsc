Class P_GiveMegasphere : P_Event
{
	override void eventFunc()
	{
		EventHandler.SendNetworkEvent("giveitem:Megasphere");
	}
	
	override void closeFunc() {}
	
	static P_Event create()
	{
		P_Event event = new('P_GiveMegaSphere');
		event.eventname = "Give Megasphere";
		event.duration = 35 * 15;
		event.type = E_Instant;
		return event;
	}
}

