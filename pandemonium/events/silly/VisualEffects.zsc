Class P_SpinningMonsters : P_Event
{
	override void eventFunc()
	{
		ThinkerIterator it = ThinkerIterator.Create("Actor");
		Actor mo;
	
		while ((mo = Actor(it.Next ())))
		{
			if (mo.bIsMonster)
			{
				mo.A_SetAngle(mo.angle + 45);
			}
		}
	}
	
	override void closeFunc() 
	{

	}
	
	static P_Event create()
	{
		P_Event event = new('P_SpinningMonsters');
		event.eventname = "Speeeeeeeen!";
		event.duration = 35 * 30;
		event.type = E_Timed;
		return event;
	}
}